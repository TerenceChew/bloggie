<!DOCTYPE html>
<html lang="en">
<%- include("./partials/head.ejs") %>
<body>
  <%- include("./partials/header.ejs") %>

  <main>
    <h2>All Blogs</h2>

    <section class="blogs-container">
      <% if (blogs.length > 0) { %>
        <% blogs.forEach(blog => { %>
          <a class="blog" href="/blogs/<%= blog._id %>">
            <h3>
              <%= blog.title %>
            </h3>
            <p>
              <%= blog.body %>
            </p>
          </a>
        <% }); %>
      <% } else { %>
        <p>There are no blogs to display ...</p>
      <% } %>
    </section>
  </main>
  
  <%- include("./partials/footer.ejs") %>
</body>
</html>